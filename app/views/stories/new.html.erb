<!-- form_for helper creates a form that's bound to a specific objectâ€”in this case, it's bound to the @story instance variable
-->
<% if @story.errors.any? %>
  <div class="form_errors">
    <h3>Errors</h3>
    <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @story do |f| %>
  <div>
    <p><%= f.label :name  %></p>
    <%= f.text_field :name %>
  </div>
  <div>
    <p><%= f.label :link  %></p>
    <%= f.text_field :link %>
  </div>
  <%= submit_tag %>
<% end %>
